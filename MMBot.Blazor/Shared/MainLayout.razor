@inject IAccountService AccountService
@inject NavigationManager NavigationManager
@inject ProtectedSessionStorage ProtectedSessionStore

@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <a href="#">Hello, @context.User.Identity.Name!</a>
                    <label for="guilds">Choose a guild:</label>

                    <select @onchange="OnSelectedGuildChanged">
                        @foreach (var guild in AccountService.LoggedUser.Guilds)
                        {
                            <option value="@guild.id">@guild.name</option>
                        }
                    </select>

                    <a href="Account/Logout">Log out</a>
                </Authorized>
                <NotAuthorized>
                    <a href="Account/Login">Log in</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <div class="content px-4">
            @Body
        </div>
    </div>
</div>

@code
{
    public string SelectedGuild { get; set; }

    protected override void OnAfterRender(bool firstRender)
    {
        SelectedGuild = AccountService.LoggedUser.CurrentGuildId;
    }

    public void OnSelectedGuildChanged(ChangeEventArgs args)
    {
        AccountService.LoggedUser.CurrentGuildId = SelectedGuild;
    }
}
